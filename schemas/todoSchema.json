{
	"$schema": "http://json-schema.org/draft-07/schema",
	"$id": "http://example.com/example.json",
	"type": "object",
	"title": "The root schema",
	"description": "Todo Schema",
	"default": {},
	"examples": [
		{
			"description": "Walk Mavis",
			"completed": false,
			"folder_id": 1
		}
	],
	"required": [ "description", "completed", "folder_id" ],
	"properties": {
		"id": {
			"$id": "#/properties/description",
			"type": "integer",
			"title": "ID",
			"description": "Autoincrementing id",
			"default": "",
			"examples": [ 1 ]
		},
		"description": {
			"$id": "#/properties/description",
			"type": "string",
			"title": "Description",
			"description": "Describes a todo",
			"default": "",
			"examples": [ "Walk Mavis" ]
		},
		"completed": {
			"$id": "#/properties/completed",
			"type": "boolean",
			"title": "Completed",
			"description": "Says if the todo is true or false",
			"default": "",
			"examples": [ "false", "true" ]
		},
		"folder_id": {
			"$id": "#/properties/folder_id",
			"type": "number",
			"title": "Folder Name",
			"description": "The id of the folder the todo belongs to",
			"default": "",
			"examples": [ 1 ]
		}
	},
	"additionalProperties": false
}
