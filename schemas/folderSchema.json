{
	"$schema": "http://json-schema.org/draft-07/schema",
	"$id": "http://example.com/example.json",
	"type": "object",
	"title": "Folder Schema",
	"description": "This is the folder schema",
	"default": {},
	"examples": [
		{
			"id": 1,
			"name": "House Chores"
		}
	],
	"required": [ "name" ],
	"properties": {
		"id": {
			"$id": "#/properties/id",
			"type": "integer",
			"title": "ID",
			"description": "An auto-incrementing unique ID",
			"default": 0,
			"examples": [ 1 ]
		},
		"name": {
			"$id": "#/properties/name",
			"type": "string",
			"title": "Name",
			"description": "The name of the folder",
			"default": "",
			"examples": [ "House Chores" ]
		}
	},
	"additionalProperties": false
}
